<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.js"></script>

<script>

  function getComments() {
      $.ajax({
        url: '/comments',
        type: 'GET',
        dataType: 'json'
      })
      .done(function(data) {
        for i in data {
          if (data.Owner === "404") {
            $( "#allComments" ).append( "<p class="comment"><span class="commentSpan">"+data.Name+"</span>:"+data.Comment+"</p>" );
        }
        console.log("success");
        }
      });

      $(document).ready(function() {
        getComments()
      });

  }

</script>

<div align = "center"><h1>404: Page Not Found</h1>
<h3> Houston we have a problem! </h3>
<p>But while you're here -- would you like to add to our 404?</p>
</div>

<div id="commentBox">
  <form class="" action="/comments" method="post">
    <input type="textarea" placeholder="Say something mean about Jim." name="Comment"></input>
    <input type="text" placeholder="Name? (optional)" name="Name"></input>
    <input type="hidden" name="Owner" value="404"></input>
    <p><input type="submit" class="commentBtn" value="Add Comment"></input></p>
  </form>
  <div id="allComments">

  </div>
</div>


</div>
